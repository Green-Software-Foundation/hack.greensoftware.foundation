---
const {  title, description,  } = Astro.props;
const image = Astro.props.image || `/assets/images/${title.toLowerCase().replaceAll(" ", "-")}.svg`;
---

<div
  class={`flex items-center gap-8 bg-primary-dark p-4 rounded-lg`}
>
  <img src={image} alt={`${title} icon`} />
  <div>
    <h6 class="text-secondary text-base lg:text-lg font-bold">{title}</h6>
    <p class="text-white text-sm lg:text-base">{description}</p>
  </div>
</div>
