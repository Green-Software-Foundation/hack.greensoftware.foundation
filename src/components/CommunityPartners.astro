---
// Create empty array of four elements
const sponsorLogos = [
  {
    url: "https://www.microsoft.com/about",
    name: "Microsoft",
    logo: "microsoft.svg",
  },
  ,
  {
    url: "https://www.electricitymaps.com",
    name: "Electricity Maps",
    logo: "electricity-maps.svg",
  }
];
---

<section id="sponsors">
  <div class="py-12 md:py-16 lg:py-10 text-center">
    <h1
      class="text-2xl lg:text-3xl text-primary-lightest-2 font-black uppercase"
    >
      Community Partners
    </h1>

    <div class="mt-8 flex flex-wrap items-center justify-center gap-12">
      {
        sponsorLogos.map(({ url, logo }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="no-underline opacity-50 hover:opacity-100 transition-all duration-300 ease-in-out"
          >
            <img src={`assets/sponsors/${logo}`} alt={logo} class="h-8 " />
          </a>
        ))
      }
    </div>
  </div>
</section>
