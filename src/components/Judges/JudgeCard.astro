---
const { name, title, company, image, url } = Astro.props;
import { Image } from 'astro:assets';
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="bg-primary-dark flex flex-col items-center  rounded-lg p-6 gap-4 no-underline group"
>
  <div class="bg-primary-darkest h-20 w-20 rounded-full flex-shrink-0">
    <Image
      class="rounded-full object-cover w-full h-full grayscale mix-blend-luminosity group-hover:grayscale-0 group-hover:mix-blend-normal transition-all duration-300 ease-in-out"
      src={image}
      alt={name}
      width="80"
      height="80"
    />
  </div>
  <div class="text-center flex flex-col gap-1">
    <h2 class="text-secondary font-bold text-lg">{name}</h2>
    <p class="text-white font-semibold text-sm">{title}</p>
    <p class="text-primary-lighter
        text-sm">{company}</p>
  </div>
</a>
