---
const navItems = [
  { name: "About", href: "#about" },
  { name: "Timeline", href: "#timeline" },
  { name: "Awards", href: "#awards" },
  { name: "Sponsors", href: "#sponsors" },
];
---

<nav
  class="bg-primary-dark text-white border border-primary font-extrabold text-sm rounded-2xl flex items-center justify-center w-fit mx-auto"
>
  {
    navItems.map((item) => (
      <>
        <a
          class="p-4 rounded-2xl hover:bg-primary-darkest transition-all duration-300 ease-in-out"
          href={item.href}
        >
          {item.name}
        </a>
      </>
    ))
  }
  <a
    href="#sign-up"
    class="p-4 rounded-2xl bg-secondary hover:bg-secondary-light text-primary-dark focus:ring-2 focus:ring-secondary focus:ring-offset-2 focus:ring-offset-primary-darkest transition-all duration-300 ease-in-out"
  >
    Sign Up
  </a>
</nav>
