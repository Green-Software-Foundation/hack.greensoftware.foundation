---
const navItems = [
  { name: "About", href: "/#about" },
  { name: "Timeline", href: "/#timeline" },
  { name: "Awards", href: "/#awards" },
  { name: "Sponsors", href: "/#sponsors" },
  { name: "FAQs", href: "/#faq" },
];
---

<nav
  class="bg-primary-dark  border border-primary font-extrabold text-sm rounded-2xl flex items-center justify-center w-fit mx-auto whitespace-nowrap"
>
  {
    navItems.map((item) => (
      <>
        <a
          class="p-4 rounded-2xl text-white no-underline hover:bg-primary-darkest transition-all duration-300 ease-in-out"
          href={item.href}
        >
          {item.name}
        </a>
      </>
    ))
  }
  <a
    href="/#sign-up"
    class="p-4 rounded-2xl bg-secondary hover:bg-secondary-light text-primary-dark focus:ring-2 focus:ring-secondary focus:ring-offset-2 focus:ring-offset-primary-darkest transition-all duration-300 ease-in-out no-underline"
  >
    Sign Up
  </a>
</nav>
