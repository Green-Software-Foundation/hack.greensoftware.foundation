---
import TimelineCard from "./TimelineCard.astro";
const timelineCards = [
  {
    date: "22 January",
    event: "Registration begins",
    phase: "current phase",
  },
  { date: "18 March", event: "Hackathon Starts" },
  {
    date: "8 April",
    event: "End of Hackathon & Project Submission",
  },
  { date: "18 April", event: "Awards Ceremony" },
];
---

<section id="timeline">
  <div class="py-12 md:py-16 lg:py-10">
    <h1
      class="text-2xl lg:text-3xl text-primary-lightest-2 font-black uppercase"
    >
      Timeline
    </h1>

    <div class="mt-8 grid grid-cols-1 lg:grid-cols-4 gap-4">
      {
        timelineCards.map((card) => (
          <TimelineCard
            date={card.date}
            event={card.event}
            phase={card.phase}
          />
        ))
      }
    </div>
  </div>
</section>
