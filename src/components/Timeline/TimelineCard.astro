---
const { date, event, phase = "", special = false } = Astro.props;
const borderClass = special ? "border border-secondary" : "";
---

<div class={`bg-primary-dark p-6 rounded-lg ${borderClass}`}>
  <h6 class="text-secondary text-base font-bold">{date}</h6>
  <p class="text-white text-sm lg:text-base font-bold">{event}</p>
  <p class="text-right text-primary-light text-xs lg:text-sm">{phase}</p>
</div>
